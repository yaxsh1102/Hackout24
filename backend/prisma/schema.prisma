generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employee {
  id       String    @id @default(uuid())
  email    String    @unique
  name     String
  password String
  age      String
  area     String
  city     String
  state    String
  country  String
  type     String?
  Farmer   Farmer[]
  Project  Project[]
}

model Farmer {
  id         String   @id @default(uuid())
  employeeId String
  name       String
  area       String
  city       String
  state      String
  number     String
  location   String
  Employee   Employee @relation(fields: [employeeId], references: [id])
  Project    Project?
}

model Project {
  id         String   @id @default(uuid())
  Farmer     Farmer   @relation(fields: [farmerId], references: [id])
  farmerId   String   @unique
  Employee   Employee @relation(fields: [employeeId], references: [id])
  employeeId String
}
